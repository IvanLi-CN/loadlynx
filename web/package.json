{
  "name": "loadlynx-web",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "node scripts/write-version.mjs && bun scripts/ports.ts check webDev && vite",
    "build": "tsc -b && vite build && node scripts/write-version.mjs",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "storybook": "STORYBOOK_PORT=$(bun scripts/ports.ts print storybook) && storybook dev -p $STORYBOOK_PORT --exact-port",
    "build-storybook": "storybook build",
    "test:storybook": "test-storybook --failOnConsole --disable-telemetry",
    "test:storybook:ci": "STORYBOOK_TEST_PORT=$(bun scripts/ports.ts print storybookTest) && concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"bun run build-storybook --quiet && http-server storybook-static -a 127.0.0.1 --port $STORYBOOK_TEST_PORT --silent\" \"wait-on tcp:127.0.0.1:$STORYBOOK_TEST_PORT && bun run test:storybook --url http://127.0.0.1:$STORYBOOK_TEST_PORT\"",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "preview": "bun scripts/ports.ts check webPreview && vite preview"
  },
  "dependencies": {
    "@iconify-icons/mdi-light": "^1.2.5",
    "@iconify/react": "^6.0.2",
    "@tanstack/react-query": "^5.71.10",
    "@tanstack/react-router": "^1.114.3",
    "decimal.js": "^10.6.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@playwright/test": "^1.57.0",
    "@storybook/react-vite": "^10.1.10",
    "@storybook/test": "^8.6.14",
    "@storybook/test-runner": "^0.24.2",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/react-query-devtools": "^5.71.10",
    "@tanstack/router-devtools": "^1.114.3",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "daisyui": "^5.5.8",
    "http-server": "^14.1.1",
    "lefthook": "^2.0.4",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "storybook": "^10.1.10",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
